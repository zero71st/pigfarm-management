{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=pigfarm.db"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "PigFarmManagement.Server.Features.Feeds.FeedImportService": "Debug"
    }
  },
  "Security": {
    "ApiKey": {
      "HeaderName": "X-Api-Key",
      "EnableValidation": true,
      "AllowExpired": false,
      "CacheMinutes": 5
    },
    "Session": {
      "IdleTimeoutHours": 2,
      "MaxDurationHours": 24,
      "CleanupIntervalMinutes": 15,
      "EnableValidation": true,
      "HeaderName": "X-Session-Id"
    },
    "RateLimiting": [
      {
        "Name": "AdminPolicy",
        "AppliesTo": ["Admin"],
        "RequestsPerHour": 1000,
        "WindowMinutes": 60,
        "BlockDurationMinutes": 15,
        "CleanupIntervalMinutes": 5,
        "Enabled": true
      },
      {
        "Name": "UserPolicy", 
        "AppliesTo": ["User"],
        "RequestsPerHour": 500,
        "WindowMinutes": 60,
        "BlockDurationMinutes": 15,
        "CleanupIntervalMinutes": 5,
        "Enabled": true
      },
      {
        "Name": "ReadOnlyPolicy",
        "AppliesTo": ["ReadOnly"],
        "RequestsPerHour": 200,
        "WindowMinutes": 60,
        "BlockDurationMinutes": 15,
        "CleanupIntervalMinutes": 5,
        "Enabled": true
      }
    ],
    "Roles": {
      "Hierarchy": {
        "ReadOnly": 1,
        "User": 2,
        "Admin": 3
      },
      "Permissions": {
        "ReadOnly": ["read:customers", "read:pigpens", "read:feeds"],
        "User": ["read:customers", "write:customers", "read:pigpens", "write:pigpens", "read:feeds"],
        "Admin": ["read:customers", "write:customers", "delete:customers", "read:pigpens", "write:pigpens", "delete:pigpens", "read:feeds", "write:feeds", "delete:feeds", "admin:users"]
      },
      "DefaultRole": "ReadOnly"
    },
    "Middleware": {
      "Enabled": true,
      "SkipInDevelopment": false,
      "ExcludePaths": ["/health", "/swagger", "/api/v1/health"],
      "DetailedErrors": false,
      "LogSecurityEvents": true
    }
  },
  "GoogleMaps": {
    "ApiKey": "YOUR_GOOGLE_MAPS_API_KEY_HERE",
    "DefaultZoom": 10,
    "DefaultCenter": {
      "Latitude": 37.7749,
      "Longitude": -122.4194
    }
  },
  "AllowedOrigins": [
    "https://pigfarm-management-client.vercel.app",
    "https://zero71st-pigfarm-management.vercel.app"
  ],
  "AllowedHosts": "*"
}
