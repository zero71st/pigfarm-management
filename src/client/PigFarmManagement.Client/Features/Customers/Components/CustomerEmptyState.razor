@using Microsoft.AspNetCore.Components
@using MudBlazor

<MudPaper Class="pa-8 text-center" Elevation="0">
    <MudIcon Icon="Icons.Material.Filled.People" Size="Size.Large" Class="mb-4" Color="Color.Default" />
    <MudText Typo="Typo.h6" Class="mb-2">No customers found</MudText>
    <MudText Typo="Typo.body1" Class="mb-4">
        @if (!HasFilters)
        {
            <text>Start by adding your first customer to manage pig pens.</text>
        }
        else
        {
            <text>Try adjusting your search criteria or filters.</text>
        }
    </MudText>
    <MudButton Variant="Variant.Filled" 
              Color="Color.Primary" 
              StartIcon="Icons.Material.Filled.Add"
              OnClick="OnAddCustomer">
        @if (!HasFilters)
        {
            <text>Add First Customer</text>
        }
        else
        {
            <text>Add Customer</text>
        }
    </MudButton>
</MudPaper>

@code {
    [Parameter] public bool HasFilters { get; set; }
    [Parameter] public EventCallback OnAddCustomer { get; set; }
}
