@using Microsoft.AspNetCore.Components
@using MudBlazor

<MudPaper Class="pa-8 text-center" Elevation="0">
    <MudIcon Icon="Icons.Material.Filled.People" Size="Size.Large" Class="mb-4" Color="Color.Default" />
    <MudText Typo="Typo.h6" Class="mb-2">ไม่พบลูกค้า</MudText>
    <MudText Typo="Typo.body1" Class="mb-4">
        @if (!HasFilters)
        {
            <text>นำเข้าลูกค้าจาก POSPOS เพื่อเริ่มต้น</text>
        }
        else
        {
            <text>ลองปรับเกณฑ์การค้นหาหรือตัวกรองของคุณ</text>
        }
    </MudText>
</MudPaper>

@code {
    [Parameter] public bool HasFilters { get; set; }
    [Parameter] public EventCallback OnAddCustomer { get; set; }
}
