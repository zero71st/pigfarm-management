@using Microsoft.AspNetCore.Components
@using MudBlazor
@using PigFarmManagement.Shared.Models
@using PigFarmManagement.Client.Features.Customers.Services
@inject ICustomerService CustomerService

<MudDialog>
    <DialogContent>
        <MudContainer Style="max-width: 500px;">
            <MudGrid>
                <MudItem xs="6">
                    <MudTextField @bind-Value="customerFirstName" 
                                 Label="ชื่อ" 
                                 Variant="Variant.Outlined" 
                                 Required="true"
                                 RequiredError="กรุณาระบุชื่อ" />
                </MudItem>
                <MudItem xs="6">
                    <MudTextField @bind-Value="customerLastName" 
                                 Label="นามสกุล" 
                                 Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12">
                    <MudTextField @bind-Value="customerCode" 
                                 Label="รหัสลูกค้า" 
                                 Variant="Variant.Outlined" 
                                 Required="true"
                                 RequiredError="กรุณาระบุรหัสลูกค้า" />
                </MudItem>
                <MudItem xs="12">
                    <MudSelect T="CustomerStatus" @bind-Value="customerStatus" 
                              Label="สถานะลูกค้า" 
                              Variant="Variant.Outlined"
                              Required="true">
                        <MudSelectItem T="CustomerStatus" Value="@CustomerStatus.Active">ใช้งาน</MudSelectItem>
                        <MudSelectItem T="CustomerStatus" Value="@CustomerStatus.Inactive">ไม่ใช้งาน</MudSelectItem>
                    </MudSelect>
                </MudItem>
            </MudGrid>
        </MudContainer>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">ยกเลิก</MudButton>
        <MudButton Color="Color.Primary" 
                  Variant="Variant.Filled" 
                  OnClick="Submit" 
                  Disabled="@(!IsFormValid())">
            เพิ่ลูกค้า
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; } = null!;

    private string customerFirstName = "";
    private string customerLastName = "";
    private string customerCode = "";
    private CustomerStatus customerStatus = CustomerStatus.Active;

    void Cancel() => MudDialog.Cancel();

    private bool IsFormValid()
    {
        return !string.IsNullOrWhiteSpace(customerFirstName) &&
               !string.IsNullOrWhiteSpace(customerCode);
    }

    async Task Submit()
    {
        if (!IsFormValid())
            return;

        try
        {
            var customer = new Customer(Guid.NewGuid(), customerCode, customerStatus)
            {
                FirstName = customerFirstName,
                LastName = customerLastName
            };
            var createdCustomer = await CustomerService.CreateCustomerAsync(customer);
            MudDialog.Close(DialogResult.Ok(createdCustomer));
        }
        catch
        {
            MudDialog.Cancel();
        }
    }
}
