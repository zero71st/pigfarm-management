@using Microsoft.AspNetCore.Components
@using MudBlazor
@using PigFarmManagement.Shared.Models

<MudPaper Class="pa-4 mt-4" Elevation="2">
    <MudText Typo="Typo.h6" Class="mb-3">Customer Statistics</MudText>
    <MudGrid>
        <MudItem xs="12" sm="6" md="3">
            <MudPaper Class="pa-3 text-center" Elevation="1">
                <MudText Typo="Typo.h4" Color="Color.Primary">@Customers.Count</MudText>
                <MudText Typo="Typo.body2">Total Customers</MudText>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" sm="6" md="3">
            <MudPaper Class="pa-3 text-center" Elevation="1">
                <MudText Typo="Typo.h4" Color="Color.Success">@Customers.Count(c => c.Status == CustomerStatus.Active)</MudText>
                <MudText Typo="Typo.body2">Active Customers</MudText>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" sm="6" md="3">
            <MudPaper Class="pa-3 text-center" Elevation="1">
                <MudText Typo="Typo.h4" Color="Color.Error">@Customers.Count(c => c.Status == CustomerStatus.Inactive)</MudText>
                <MudText Typo="Typo.body2">Inactive Customers</MudText>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" sm="6" md="3">
            <MudPaper Class="pa-3 text-center" Elevation="1">
                <MudText Typo="Typo.h4" Color="Color.Warning">@PigPens.Count</MudText>
                <MudText Typo="Typo.body2">Total Pig Pens</MudText>
            </MudPaper>
        </MudItem>
    </MudGrid>
</MudPaper>

@code {
    [Parameter] public List<Customer> Customers { get; set; } = new();
    [Parameter] public List<PigPen> PigPens { get; set; } = new();
}
