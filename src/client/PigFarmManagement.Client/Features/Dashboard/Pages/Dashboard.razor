@page "/dashboard"
@attribute [Authorize]
@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Authorization
@using MudBlazor
@using PigFarmManagement.Shared.Models
@using PigFarmManagement.Client.Features.Dashboard.Services
@inject IDashboardService DashboardService
@inject ISnackbar Snackbar

<PageTitle>Dashboard</PageTitle>

<MudText Typo="Typo.h4" GutterBottom="true">Dashboard</MudText>

@if (loading)
{
    <MudProgressLinear Color="Color.Primary" Indeterminate="true" Class="ma-2" />
}
else if (dashboardOverview != null)
{
    <!-- Dashboard Overview Cards (Activity + Financial Metrics only) -->
    <DashboardOverviewCards Overview="dashboardOverview" />
    
    <!-- 1. การดำเนินงานคอกสุกรโครงการ (Project Operations) -->
    <MudGrid Class="mt-4">
        <MudItem xs="12">
            <MudCard Elevation="3" Class="pa-4">
                <MudCardHeader>
                    <CardHeaderContent>
                        <MudText Typo="Typo.h6">
                            <MudIcon Icon="@Icons.Material.Filled.Business" Class="mr-2" Color="Color.Info" />
                            การดำเนินงานคอกสุกร (โครงการ)
                        </MudText>
                    </CardHeaderContent>
                </MudCardHeader>
                <MudCardContent>
                    <MudGrid Spacing="3">
                        @{
                            // Compute total investment used as 100% reference. Fallback to sum of parts if TotalInvestmentProject is not provided.
                            var totalInvestment = dashboardOverview.TotalInvestmentProject != 0
                                ? dashboardOverview.TotalInvestmentProject
                                : dashboardOverview.TotalOwnerCapitalProject + dashboardOverview.TotalProfitProject + dashboardOverview.TotalCustomerCapitalProject;
                            double ownerPercent = totalInvestment != 0 ? (double)(dashboardOverview.TotalOwnerCapitalProject / totalInvestment * 100m) : 0.0;
                            double profitPercent = totalInvestment != 0 ? (double)(dashboardOverview.TotalProfitProject / totalInvestment * 100m) : 0.0;
                            double customerPercent = totalInvestment != 0 ? (double)(dashboardOverview.TotalCustomerCapitalProject / totalInvestment * 100m) : 0.0;
                        }
                        <!-- Column 1 -->
                        <MudItem xs="12" sm="6" md="2">
                            <div class="d-flex flex-column align-center">
                                <MudIcon Icon="@Icons.Material.Filled.Home" Color="Color.Info" Size="Size.Large" Class="mb-2" />
                                <MudText Typo="Typo.h5" Color="Color.Info">@(dashboardOverview.TotalActivePigPens - (dashboardOverview.TotalPigsCash > 0 ? GetCashPenEstimate() : 0))</MudText>
                                <MudText Typo="Typo.caption" Color="Color.Secondary" Align="Align.Center">คอกสุกรทั้งหมด</MudText>
                            </div>
                        </MudItem>
                        
                        <!-- Column 2 -->
                        <MudItem xs="12" sm="6" md="2">
                            <div class="d-flex flex-column align-center">
                                <MudIcon Icon="@Icons.Material.Filled.Pets" Color="Color.Info" Size="Size.Large" Class="mb-2" />
                                <MudText Typo="Typo.h5" Color="Color.Info">@dashboardOverview.TotalPigsProject</MudText>
                                <MudText Typo="Typo.caption" Color="Color.Secondary" Align="Align.Center">จำนวนสุกรทั้งหมด</MudText>
                            </div>
                        </MudItem>
                        
                        <!-- Column 3 -->
                        <MudItem xs="12" sm="6" md="2">
                            <div class="d-flex flex-column align-center">
                                <MudIcon Icon="@Icons.Material.Filled.Store" Color="Color.Info" Size="Size.Large" Class="mb-2" />
                                <MudText Typo="Typo.h6" Color="Color.Info">
                                    @FormatCurrency(dashboardOverview.TotalOwnerCapitalProject)
                                    <span style="font-size:0.85rem; color:#666; margin-left:8px;">(@ownerPercent.ToString("0.#")%)</span>
                                </MudText>
                                <MudText Typo="Typo.caption" Color="Color.Secondary" Align="Align.Center">เงินลงทุนส่วนของร้าน</MudText>
                            </div>
                        </MudItem>
                        
                        <!-- Column 4 -->
                        <MudItem xs="12" sm="6" md="2">
                            <div class="d-flex flex-column align-center">
                                <MudIcon Icon="@Icons.Material.Filled.TrendingUp" Color="@(dashboardOverview.TotalProfitProject >= 0 ? Color.Success : Color.Error)" Size="Size.Large" Class="mb-2" />
                                <MudText Typo="Typo.h6" Style="@($"color: {(dashboardOverview.TotalProfitProject >= 0 ? "green" : "red")}")">
                                    @FormatCurrency(dashboardOverview.TotalProfitProject)
                                    <span style="font-size:0.85rem; color:#666; margin-left:8px;">(@profitPercent.ToString("0.#")%)</span>
                                </MudText>
                                <MudText Typo="Typo.caption" Color="Color.Secondary" Align="Align.Center">เงินลงทุนส่วนกำไร/ขาดทุน</MudText>
                            </div>
                        </MudItem>
                        
                        <!-- Column 5 -->
                        <MudItem xs="12" sm="6" md="2">
                            <div class="d-flex flex-column align-center">
                                <MudIcon Icon="@Icons.Material.Filled.People" Color="Color.Info" Size="Size.Large" Class="mb-2" />
                                <MudText Typo="Typo.h6" Color="Color.Info">
                                    @FormatCurrency(dashboardOverview.TotalCustomerCapitalProject)
                                    <span style="font-size:0.85rem; color:#666; margin-left:8px;">(@customerPercent.ToString("0.#")%)</span>
                                </MudText>
                                <MudText Typo="Typo.caption" Color="Color.Secondary" Align="Align.Center">เงินลงทุนส่วนลูกค้า</MudText>
                            </div>
                        </MudItem>
                        
                        <!-- Column 6 -->
                        <MudItem xs="12" sm="6" md="2">
                            <div class="d-flex flex-column align-center">
                                <MudIcon Icon="@Icons.Material.Filled.Warning" Color="Color.Warning" Size="Size.Large" Class="mb-2" />
                                @{
                                    var risk = (dashboardOverview.TotalOwnerCapitalProject)
                                               + (dashboardOverview.TotalProfitProject)
                                               - (dashboardOverview.TotalCustomerCapitalProject);
                                    double riskPercent;
                                    if (dashboardOverview.TotalCustomerCapitalProject != 0)
                                    {
                                        riskPercent = (double)(risk / dashboardOverview.TotalCustomerCapitalProject * 100m);
                                    }
                                    else
                                    {
                                        // When there is no customer capital, treat risk as 100%
                                        riskPercent = 100.0;
                                    }
                                }
                                <MudText Typo="Typo.h6" Color="Color.Info">
                                    @FormatCurrency(risk)
                                    <span style="font-size:0.85rem; color:#666; margin-left:8px;">(@riskPercent.ToString("0.#")%)</span>
                                </MudText>
                                <MudText Typo="Typo.caption" Color="Color.Secondary" Align="Align.Center">ความเสี่ยง</MudText>
                            </div>
                        </MudItem>
                    </MudGrid>
                </MudCardContent>
            </MudCard>
        </MudItem>
    </MudGrid>
    
    <!-- 2. สรุปผลการดำเนินงานของลูกค้า (โครงการ) -->
    <CustomerStatsTable CustomerStats="dashboardOverview.CustomerStats" />
    
    <!-- 3. การดำเนินงานคอกสุกรเงินสด (Cash Operations) -->
    <MudGrid Class="mt-4">
        <MudItem xs="12">
            <MudCard Elevation="3" Class="pa-4">
                <MudCardHeader>
                    <CardHeaderContent>
                        <MudText Typo="Typo.h6">
                            <MudIcon Icon="@Icons.Material.Filled.Money" Class="mr-2" Color="Color.Success" />
                            การดำเนินงานคอกสุกร (เงินสด)
                        </MudText>
                    </CardHeaderContent>
                </MudCardHeader>
                <MudCardContent>
                    <MudGrid Spacing="3">
                        <!-- Column 1 -->
                        <MudItem xs="12" sm="6" md="3">
                            <div class="d-flex flex-column align-center">
                                <MudIcon Icon="@Icons.Material.Filled.Home" Color="Color.Success" Size="Size.Large" Class="mb-2" />
                                <MudText Typo="Typo.h5" Color="Color.Success">@GetCashPenEstimate()</MudText>
                                <MudText Typo="Typo.caption" Color="Color.Secondary" Align="Align.Center">คอกสุกรทั้งหมด</MudText>
                            </div>
                        </MudItem>
                        
                        <!-- Column 2 -->
                        <MudItem xs="12" sm="6" md="3">
                            <div class="d-flex flex-column align-center">
                                <MudIcon Icon="@Icons.Material.Filled.Pets" Color="Color.Success" Size="Size.Large" Class="mb-2" />
                                <MudText Typo="Typo.h5" Color="Color.Success">@dashboardOverview.TotalPigsCash</MudText>
                                <MudText Typo="Typo.caption" Color="Color.Secondary" Align="Align.Center">จำนวนสุกรทั้งหมด</MudText>
                            </div>
                        </MudItem>
                        
                        <!-- Column 3 -->
                        <MudItem xs="12" sm="6" md="3">
                            <div class="d-flex flex-column align-center">
                                <MudIcon Icon="@Icons.Material.Filled.AttachMoney" Color="Color.Success" Size="Size.Large" Class="mb-2" />
                                <MudText Typo="Typo.h6" Color="Color.Success">@FormatCurrency(dashboardOverview.TotalPriceIncludeDiscountCash)</MudText>
                                <MudText Typo="Typo.caption" Color="Color.Secondary" Align="Align.Center">รายได้จากลูกค้า</MudText>
                            </div>
                        </MudItem>
                        
                        <!-- Column 4 -->
                        <MudItem xs="12" sm="6" md="3">
                            <div class="d-flex flex-column align-center">
                                <MudIcon Icon="@Icons.Material.Filled.TrendingUp" Color="@(dashboardOverview.TotalProfitCash >= 0 ? Color.Success : Color.Error)" Size="Size.Large" Class="mb-2" />
                                <MudText Typo="Typo.h6" Style="@($"color: {(dashboardOverview.TotalProfitCash >= 0 ? "green" : "red")}")">@FormatCurrency(dashboardOverview.TotalProfitCash)</MudText>
                                <MudText Typo="Typo.caption" Color="Color.Secondary" Align="Align.Center">กำไร/ขาดทุน</MudText>
                            </div>
                        </MudItem>
                    </MudGrid>
                </MudCardContent>
            </MudCard>
        </MudItem>
    </MudGrid>
    
    <!-- 4. สรุปผลการดำเนินงานของลูกค้า (เงินสด) -->
    <CustomerStatsTableCash CustomerStatsCash="dashboardOverview.CustomerStatsCash" />
}

@code {
    private DashboardOverview? dashboardOverview;
    private bool loading = true;
    private string searchText = "";

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        try
        {
            loading = true;

            dashboardOverview = await DashboardService.GetDashboardOverviewAsync();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error loading data: {ex.Message}", Severity.Error);
        }
        finally
        {
            loading = false;
        }
    }

    private string FormatCurrency(decimal amount)
    {
        return amount.ToString("N2", new System.Globalization.CultureInfo("th-TH"));
    }

    private int GetCashPenEstimate()
    {
        if (dashboardOverview == null || dashboardOverview.TotalPigsCash == 0)
            return 0;

        return (int)Math.Ceiling((decimal)dashboardOverview.TotalPigsCash / 
            (dashboardOverview.TotalPigs > 0 ? (decimal)dashboardOverview.TotalPigs / dashboardOverview.TotalActivePigPens : 1));
    }
}
