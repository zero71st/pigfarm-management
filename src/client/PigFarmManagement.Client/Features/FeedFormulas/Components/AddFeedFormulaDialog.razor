@using MudBlazor
@using PigFarmManagement.Client.Features.FeedFormulas.Services
@inject IFeedFormulaService FeedFormulaService
@inject ISnackbar Snackbar

<MudDialog>
    <DialogContent>
        <MudContainer Style="max-width: 600px;">
            <MudForm @ref="form" @bind-IsValid="@isValid" @bind-Errors="@errors">
                <MudTextField @bind-Value="productCode"
                             Label="รหัสผลิตภัณฑ์"
                             Required="true"
                             RequiredError="กรุณาระบุรหัสผลิตภัณฑ์"
                             Validation="@(new Func<string, Task<string>>(ValidateProductCode))"
                             Immediate="true"
                             For="@(() => productCode)" />

                <MudTextField @bind-Value="productName"
                             Label="ชื่อผลิตภัณฑ์"
                             Required="true"
                             RequiredError="กรุณาระบุชื่อผลิตภัณฑ์"
                             For="@(() => productName)" />

                <MudTextField @bind-Value="categoryName"
                             Label="หมวดหมู่"
                             Required="true"
                             RequiredError="กรุณาระบุหมวดหมู่"
                             For="@(() => categoryName)" />

                <MudTextField @bind-Value="brand"
                             Label="แบรนด์"
                             Required="false"
                             HelperText="กำหนดแบรนด์ตามความต้องการ"
                             For="@(() => brand)" />

                <MudNumericField @bind-Value="consumeRate"
                               Label="อัตราการใช้"
                               Required="true"
                               RequiredError="กรุณาระบุอัตราการใช้"
                               Min="0.1m"
                               Max="10.0m"
                               Step="0.1m"
                               Format="F2"
                               For="@(() => consumeRate)" />

                <MudNumericField @bind-Value="cost"
                               Label="ราคา"
                               Required="true"
                               RequiredError="กรุณาระบุราคา"
                               Min="0m"
                               Step="0.01m"
                               Format="F2"
                               For="@(() => cost)" />

                <MudTextField @bind-Value="unitName"
                             Label="หน่วย"
                             For="@(() => unitName)" />

                <MudText Typo="Typo.caption" Class="mt-2">
                    อัตราการกิน: @consumeRate.ToString("F2") ต่อสุกร
                </MudText>
            </MudForm>
        </MudContainer>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">ยกเลิก</MudButton>
        <MudButton Color="Color.Primary" 
                  Variant="Variant.Filled" 
                  OnClick="Submit" 
                  Disabled="@(!isValid || saving)">
            @if (saving)
            {
                <MudProgressCircular Class="ms-n1" Size="Size.Small" Indeterminate="true"/>
                <MudText Class="ms-2">กำลังสร้าง...</MudText>
            }
            else
            {
                <MudText>สร้างสูตรอาหาร</MudText>
            }
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; } = null!;

    private MudForm form = null!;
    private bool isValid;
    private string[] errors = Array.Empty<string>();
    private bool saving = false;

    private string productCode = "";
    private string productName = "";
    private string categoryName = "";
    private string brand = "";
    private decimal consumeRate = 1.0m;
    private decimal cost = 0m;
    private string unitName = "";

    private async Task<string> ValidateProductCode(string code)
    {
        if (string.IsNullOrWhiteSpace(code))
            return "กรุณาระบุรหัสผลิตภัณฑ์";

        try
        {
            var exists = await FeedFormulaService.ExistsAsync(code);
            if (exists)
                return "มีรหัสผลิตภัณฑ์นี้อยู่แล้ว";
        }
        catch
        {
            // If validation fails, we'll let the main submit handle the error
        }

        return string.Empty;
    }

    private void Cancel() => MudDialog.Cancel();

    private async Task Submit()
    {
        try
        {
            saving = true;
            await form.Validate();

            if (!isValid)
                return;

            var dto = new FeedFormulaCreateDto(productCode, productName, categoryName, brand, consumeRate, cost, unitName);
            await FeedFormulaService.CreateFeedFormulaAsync(dto);
            
            MudDialog.Close(DialogResult.Ok(true));
        }
        catch (Exception ex)
        {
            Snackbar.Add($"เกิดข้อผิดพลาดในการสร้างสูตรอาหาร: {ex.Message}", Severity.Error);
        }
        finally
        {
            saving = false;
        }
    }
}
