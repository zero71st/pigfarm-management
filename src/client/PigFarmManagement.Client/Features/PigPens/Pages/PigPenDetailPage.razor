    private async Task LoadData()
    {
        loading = true;
        try
        {
            // Load pig pen details
            var pigPens = await Http.GetFromJsonAsync<List<PigPen>>("/api/pigpens") ?? new();
            pigPen = pigPens.FirstOrDefault(p => p.Id == PigPenId);

            if (pigPen != null)
            {
