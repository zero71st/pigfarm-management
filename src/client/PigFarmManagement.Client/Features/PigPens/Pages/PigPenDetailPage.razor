                    try
                    {
                        // Get active formula assignments for this pig pen
                        var activeAssignments = pigPen.FormulaAssignments
                            .Where(fa => fa.IsActive && !fa.IsLocked)
                            .ToList();

                        if (activeAssignments.Any())
